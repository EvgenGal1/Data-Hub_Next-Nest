{
  "version": 2,
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "builds": [
    {
      "src": "dist/main.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**/*",
          "src/**/*",
          "package.json",
          "tsconfig.json"
        ],
        "installCommand": "npm install"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/main.js"
    },
    {
      "src": "/(favicon.ico|.*(jpg|jpeg|png|gif|css|js))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/main.js",
      "methods": ["GET", "HEAD", "PUT", "PATCH", "POST", "DELETE"]
    }
  ]
}
